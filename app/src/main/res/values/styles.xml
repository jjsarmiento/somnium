<resources>

    <!-- Base application theme. -->
    <style name="Somnium" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <!--<item name="android:windowActionBar">false</item>-->
        <!--<item name="android:windowNoTitle">true</item>-->
        <!--<item name="android:windowFullscreen">true</item>-->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:actionModeBackground">@color/colorPrimaryDark</item>

        <!-- Prevent ActionMode toolbar to be created  -->
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="Somnium.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Somnium.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Somnium.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
